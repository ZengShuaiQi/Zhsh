<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeFlash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/txt_bottom_tab_selector</item>
    </style>


    <style name="TextAppearance.ZHSHTabPageIndicator" parent="ZHSHWidget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/new_vpi__dark_theme</item>
    </style>

    <style name="Theme.ZHSHPageIndicatorDefaults" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.ZHSHIconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.ZHSHTabPageIndicator</item>
    </style>

    <style name="ZHSHWidget"></style>

    <style name="Widget.ZHSHIconPageIndicator" parent="ZHSHWidget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="Widget.ZHSHTabPageIndicator" parent="ZHSHWidget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/new_vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.ZHSHTabPageIndicator</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
